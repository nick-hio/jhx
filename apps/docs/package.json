{
  "name": "docs",
  "version": "0.0.0",
  "homepage": "https://jhx.dev",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:css",
    "build:css": "npx @tailwindcss/cli -i ./global.css -o ./public/css/styles.css",
    "format": "prettier --write . --list-different",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc -p tsconfig.json --jsx preserve",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run format"
  },
  "dependencies": {
    "@fastify/autoload": "^5.10.0",
    "@fastify/static": "^8.3.0",
    "@tailwindcss/cli": "^4.1.17",
    "basecoat-css": "^0.3.5",
    "fastify": "^5.6.2",
    "fastify-plugin": "^4.5.1",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/bun": "^1.3.2",
    "@types/node": "^20.19.25",
    "@vercel/node": "^5.5.5",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-turbo": "^2.6.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}

{
  "name": "jhx",
  "description": "HTMX helper with type-safe attribute mapping. Converts props into HTMX `hx-*` attributes for templating.",
  "version": "0.1.2",
  "author": "nick-hio",
  "homepage": "https://github.com/nick-hio/jhx/tree/main/packages/jhx#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-hio/jhx.git"
  },
  "keywords": [
    "jhx",
    "htmx",
    "jsx",
    "react",
    "typescript",
    "typesafe"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "source": "./src/index.ts",
        "default": "./dist/index.d.ts"
      },
      "import": {
        "source": "./src/index.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "source": "./src/index.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:types && pnpm run prepack",
    "build:lib": "bun ../../configs/scripts-config/build.js",
    "build:types": "rollup -c rollup.config.js",
    "clean": "git clean -xdf dist",
    "format": "prettier --write . --list-different",
    "lint": "eslint . --max-warnings 0",
    "prepack": "bun ../../configs/scripts-config/prepack.js",
    "pack": "pnpm run validate && pnpm run build",
    "test": "bun test ./tests",
    "test:watch": "bun test --watch ./tests",
    "typecheck": "tsc -p tsconfig.json --jsx preserve",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run format"
  },
  "dependencies": {
    "htmx.org": "^2.0.8"
  },
  "peerDependencies": {
    "react": "^17.0.2 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.2 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/rollup-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rollup": "^4.53.2",
    "typescript": "^5.9.3"
  }
}

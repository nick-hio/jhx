{
  "name": "@jhxdev/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "source": "./src/index.ts",
        "default": "./src/index.ts"
      },
      "import": {
        "source": "./src/index.ts",
        "default": "./src/index.ts"
      }
    }
  },
  "files": [
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "format": "prettier --write . --list-different",
    "lint": "eslint . --max-warnings 0",
    "test": "bun test ./tests",
    "test:watch": "bun test --watch ./tests",
    "typecheck": "tsc -p tsconfig.json --jsx preserve",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run format"
  },
  "dependencies": {
    "jhx": "workspace:*"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.2",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "5.9.2"
  }
}

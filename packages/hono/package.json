{
  "name": "@jhxdev/hono",
  "description": "HTMX helper with type-safe attribute mapping and inline route declaration. Converts props into HTMX `hx-*` attributes for templating.",
  "version": "0.1.0",
  "author": "nick-hio",
  "homepage": "https://github.com/nick-hio/jhx/tree/main/packages/hono#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-hio/jhx.git"
  },
  "keywords": [
    "jhx",
    "htmx",
    "jsx",
    "react",
    "hono",
    "typescript",
    "typesafe"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "source": "./src/index.ts",
        "default": "./dist/index.d.ts"
      },
      "import": {
        "source": "./src/index.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "source": "./src/index.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:types && pnpm run prepack",
    "build:lib": "bun ../../configs/scripts-config/build.js",
    "build:types": "rollup -c rollup.config.js",
    "clean": "git clean -xdf dist",
    "format": "prettier --write . --list-different",
    "lint": "eslint . --max-warnings 0",
    "prepack": "bun ../../configs/scripts-config/prepack.js",
    "test": "bun test ./tests",
    "test:watch": "bun test --watch ./tests",
    "typecheck": "tsc -p tsconfig.json --jsx preserve",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run format"
  },
  "dependencies": {
    "jhx": "workspace:*"
  },
  "peerDependencies": {
    "hono": "^4",
    "react": "^17.0.2 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.2 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/rollup-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@rollup/plugin-alias": "^5.1.1",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "hono": "^4.10.4",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rollup": "^4.53.1",
    "typescript": "^5.9.3"
  }
}
